<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <EditText
        android:id="@+id/edt_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Digite seu nome:"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
    />
    
    <TextView
        android:id="@+id/txv_resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
    />

    <Button
        android:id="@+id/btn_clique_aqui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clique aqui"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:onClick="preencherTexto"
    />

    <Button
        android:id="@+id/btn_abrir_site"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abrir site da FIAP"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_gravity="center"
        android:background="@color/purple_700"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/btn_abrir_proxima_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abrir prÃ³xima Activity"
        android:layout_gravity="center"
        android:background="@color/purple_700"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        />

    <Button
        android:id="@+id/btn_compartilhar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:text="Compartilhar" />

</LinearLayout>